---
import BaseLayout from '../components/layout/BaseLayout.astro';
import HistoricalLookup from '../components/historical/HistoricalLookup';

export const prerender = false;
---

<BaseLayout
  title="Historical Weather"
  description="Look up past weather conditions for any location. Compare game-day conditions to seasonal averages."
>
  <div class="mx-auto max-w-7xl px-4 py-6">
    <div class="mb-6">
      <nav class="text-sm text-text-muted dark:text-text-dark-muted">
        <a href="/" class="hover:text-field">Home</a>
        <span class="mx-2">/</span>
        <span>Historical</span>
      </nav>
      <h1 class="mt-2 text-3xl font-bold text-text dark:text-text-dark">Historical Weather</h1>
      <p class="mt-1 text-text-muted dark:text-text-dark-muted">
        Look up what the weather was at any location on any date since January 2022.
      </p>
    </div>

    <HistoricalLookup client:only="react" />
  </div>
</BaseLayout>
