---
import BaseLayout from '../components/layout/BaseLayout.astro';
import GamePlanner from '../components/gameplanner/GamePlanner';

export const prerender = false;
---

<BaseLayout
  title="Game Day Planner"
  description="Plan your game day with ensemble weather forecasts. Get probability-based temperature, precipitation, and wind predictions for your event."
>
  <div class="mx-auto max-w-7xl px-4 py-6">
    <div class="mb-6">
      <nav class="text-sm text-text-muted dark:text-text-dark-muted">
        <a href="/" class="hover:text-field">Home</a>
        <span class="mx-2">/</span>
        <span>Game Planner</span>
      </nav>
      <h1 class="mt-2 text-3xl font-bold text-text dark:text-text-dark">Game Day Planner</h1>
      <p class="mt-1 text-text-muted dark:text-text-dark-muted">
        Select a location, date, and sport to get detailed weather analysis with ensemble probability ranges.
      </p>
    </div>

    <GamePlanner client:load />
  </div>
</BaseLayout>
