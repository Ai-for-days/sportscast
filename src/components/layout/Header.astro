---
const navItems = [
  { label: 'Home', href: '/' },
  { label: 'Historical', href: '/historical' },
  { label: 'Venues', href: '/venues' },
];
const currentPath = Astro.url.pathname;
---

<header class="sticky top-0 z-50 border-b border-border bg-surface/95 backdrop-blur-sm dark:border-border-dark dark:bg-surface-dark/95">
  <div class="mx-auto flex max-w-7xl items-center justify-between px-4 py-3">
    <!-- Logo -->
    <a href="/" class="flex shrink-0 items-center gap-2 text-xl font-bold text-field-dark dark:text-field-light">
      <img src="/logo.png" alt="Wager on Weather" class="h-10 w-auto" />
      <span class="hidden lg:inline">Wager on Weather</span>
    </a>

    <!-- Desktop nav -->
    <nav class="hidden items-center gap-2 md:flex">
      {navItems.map(item => (
        <a
          href={item.href}
          class:list={[
            'rounded-lg px-4 py-2 text-sm font-medium transition-colors whitespace-nowrap',
            currentPath === item.href || (item.href !== '/' && currentPath.startsWith(item.href))
              ? 'bg-field/10 text-field-dark dark:text-field-light'
              : 'text-text-muted hover:bg-surface-alt hover:text-text dark:text-text-dark-muted dark:hover:bg-surface-dark-alt dark:hover:text-text-dark',
          ]}
        >
          {item.label}
        </a>
      ))}
    </nav>

    <!-- Mobile hamburger -->
    <button
      id="mobile-menu-btn"
      class="rounded-lg p-2 text-text-muted hover:bg-surface-alt md:hidden dark:text-text-dark-muted dark:hover:bg-surface-dark-alt"
      aria-label="Toggle menu"
    >
      <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path id="hamburger-icon" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
        <path id="close-icon" class="hidden" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
      </svg>
    </button>
  </div>

  <!-- Mobile menu -->
  <div id="mobile-menu" class="hidden border-t border-border px-4 pb-4 md:hidden dark:border-border-dark">
    <nav class="pt-2">
      {navItems.map(item => (
        <a
          href={item.href}
          class:list={[
            'block rounded-lg px-3 py-2 text-sm font-medium transition-colors',
            currentPath === item.href || (item.href !== '/' && currentPath.startsWith(item.href))
              ? 'bg-field/10 text-field-dark dark:text-field-light'
              : 'text-text-muted hover:bg-surface-alt hover:text-text dark:text-text-dark-muted dark:hover:bg-surface-dark-alt dark:hover:text-text-dark',
          ]}
        >
          {item.label}
        </a>
      ))}
    </nav>
  </div>
</header>

<script>
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');
  const hamburger = document.getElementById('hamburger-icon');
  const close = document.getElementById('close-icon');

  btn?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
    hamburger?.classList.toggle('hidden');
    close?.classList.toggle('hidden');
  });
</script>
